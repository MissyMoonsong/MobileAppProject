        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".EventListViewer" />
        <activity android:name=".CreateEvent" />
        <activity android:name=".CreateGroup" />
        <activity android:name=".GroupDetails" />
        <activity android:name=".HomeMainPageActivity" />
        <activity android:name=".EventAutoCreate" />
        <activity android:name=".EventDetails" />
        <activity android:name=".GroupMainPageActivity" />
        <activity android:name=".AboutUs" />
        <activity android:name=".TodaysEventsActivity"></activity>
    </application>

</manifest>