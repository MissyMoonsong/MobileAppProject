<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jewel.test_project.GroupDetails">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_member_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/group_details_user_name_placeholder" />

            <Button
                android:id="@+id/btn_group_add_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/group_details_add_user" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_leave_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/group_details_leave" />

        <Button
            android:id="@+id/btn_group_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/group_details_to_schedule" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
