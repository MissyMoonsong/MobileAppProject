<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jewel.test_project.EventAutoCreate">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_auto_name_field"
            android:labelFor="@+id/txt_auto_event_name"/>

        <EditText
            android:id="@+id/txt_auto_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/event_auto_name_placeholder" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_auto_start_field" />

        <EditText
            android:id="@+id/txt_auto_start_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_auto_start_year_placeholder"
            android:inputType="number" />

        <EditText
            android:id="@+id/txt_auto_start_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_auto_start_month_placeholder"
            android:inputType="number" />

        <EditText
            android:id="@+id/txt_auto_start_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_auto_start_day_placeholder"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_auto_end_field" />

        <EditText
            android:id="@+id/txt_auto_end_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_auto_end_year_placeholder"
            android:inputType="number" />

        <EditText
            android:id="@+id/txt_auto_end_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_auto_end_month_placeholder"
            android:inputType="number" />

        <EditText
            android:id="@+id/txt_auto_end_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_auto_end_day_placeholder"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_auto_duration_field" />

        <EditText
            android:id="@+id/txt_auto_event_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_auto_duration_placeholder"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_auto_gen_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_auto_generate_button" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
