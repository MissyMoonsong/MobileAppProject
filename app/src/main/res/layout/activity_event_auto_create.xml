<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jewel.test_project.EventAutoCreate">


    <EditText
        android:id="@+id/txt_auto_event_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Event Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Window Start:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteX="11dp"
        tools:layout_conversion_absoluteY="79dp"
        tools:layout_conversion_absoluteWidth="170dp"
        tools:layout_conversion_absoluteHeight="21dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="396dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_auto_event_name"
        app:layout_constraintVertical_bias="0.576"
        android:id="@+id/textView3" />

    <Button
        android:id="@+id/button_beginDate_auto"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:onClick="setBeginDateAuto"
        android:text=""
        tools:layout_conversion_absoluteX="181dp"
        tools:layout_conversion_absoluteY="67dp"
        tools:layout_conversion_absoluteWidth="202dp"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_editor_absoluteY="74dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="71dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set End Date:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_conversion_absoluteX="11dp"
        tools:layout_conversion_absoluteY="127dp"
        tools:layout_conversion_absoluteWidth="106dp"
        tools:layout_conversion_absoluteHeight="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="363dp"
        app:layout_constraintRight_toLeftOf="@+id/button_endDate_auto"
        android:layout_marginRight="136dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_endDate_auto"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:onClick="setEndDateAuto"
        android:text=""
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="267dp"
        tools:layout_conversion_absoluteX="117dp"
        tools:layout_conversion_absoluteY="115dp"
        tools:layout_editor_absoluteX="258dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.23" />


    <EditText
        android:id="@+id/txt_auto_event_duration"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="273dp"
        android:ems="10"
        android:hint="Duration in Minutes (multiple of 15)"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="376dp"
        tools:layout_conversion_absoluteX="8dp"
        tools:layout_conversion_absoluteY="178dp"
        tools:layout_editor_absoluteX="17dp" />


    <Button
        android:id="@+id/btn_auto_gen_event"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/event_auto_generate_button"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>